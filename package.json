{
  "name": "etikettendruck",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "prepare": "svelte-kit sync || echo ''",
    "dev": "vite dev",
    "build": "prisma generate && vite build",
    "start": "node build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "db:seed": "tsx prisma/seed.ts",
    "db:setup": "npx prisma db push && npm run db:seed",
    "create-admin": "node scripts/create-admin-direct.js",
    "create-admin:simple": "node scripts/create-admin-direct.js",
    "test:security": "node security-test-runner-simple.js",
    "test:security:standalone": "node tests/security-simple.test.cjs",
  "postinstall": "prisma generate",
  "docs:api": "npx typedoc --options typedoc.json",
  "docs:build": "npm run docs:api && mkdocs build",
  "docs:serve": "npm run docs:api && mkdocs serve -a 0.0.0.0:8000",
  "docs:zip": "npm run docs:build && tar -czf site-docs.tar.gz site"
  },
  "overrides": {
    "cookie": "^1.0.2",
    "@sveltejs/kit": {
      "cookie": "^1.0.2"
    }
  },
  "devDependencies": {
    "@sveltejs/adapter-node": "^5.3.1",
    "@sveltejs/kit": "^2.36.1",
    "@sveltejs/vite-plugin-svelte": "^6.1.3",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^24.3.0",
    "@types/pngjs": "^6.0.5",
    "@types/qrcode": "^1.5.5",
    "prisma": "^6.14.0",
    "svelte": "^5.38.2",
    "svelte-check": "^4.3.1",
    "tsx": "^4.20.4",
    "typedoc": "^0.28.12",
    "typedoc-plugin-markdown": "^4.8.1",
    "typescript": "^5.9.2",
    "vite": "^7.1.3"
  },
  "dependencies": {
    "@prisma/client": "^6.14.0",
    "bcryptjs": "^3.0.2",
    "cookie": "^1.0.2",
    "date-fns": "^4.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^3.3.2",
    "pngjs": "^7.0.0",
    "qrcode": "^1.5.4",
    "sharp": "^0.34.3"
  }
}
